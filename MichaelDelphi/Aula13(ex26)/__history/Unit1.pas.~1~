unit Unit1;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.StdCtrls;

type
  TForm1 = class(TForm)
    edtNumero: TEdit;
    lbResultado: TLabel;
  private
    procedure NumeroPorExtenso;
    { Private declarations }
  public
    { Public declarations }
  end;

var
  Form1: TForm1;

implementation

{$R *.dfm}

{ TForm1 }

procedure TForm1.NumeroPorExtenso;
var
  I: Integer;
  xNum: Integer;
  xFrase: String;
begin
  xNum := StrToInt(edtNumero.text);

  case xNum of

    1:
    begin
     xFrase := ' UM ';
    end;
    2:
    begin
      xFrase := ' Dois ';
    end;
    3:
    begin
      xFrase := ' Tres ';
    end;
    4:
    begin
     xFrase := ' Quatro ';
    end;
    5:
    begin
      xFrase := ' Quatro ';
    end;
  end;
  lbResultado.caption := xFrase;


end;

end.
{. Faça um algoritmo que leia um número de 1 a 5 e escreva
por extenso. Caso o usuário digite um número que não esteja
neste intervalo, exibir a seguinte mensagem: número inválido;

{  if xNum = 1 then
      lbResultado.caption := ' Um '
    if xNum = 2 then
      lbResultado.caption := ' Dois '
    if xNum = 3 then
      lbResultado.caption := ' Tres '
    if xNum = 4 then
      lbResultado.caption := ' Quatro '
    if xNum = 5 then
      lbResultado.caption := ' Cinco '
    else
      lbResultado.caption := ' Numero invalido '

